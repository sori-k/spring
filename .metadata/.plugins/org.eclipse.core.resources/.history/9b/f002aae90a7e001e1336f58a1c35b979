<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.PostMapper">
    <select id="list" resultType="hashmap"> <!-- hashmap 은 키:값 으로 들어가는 , 다시 만든 fmtdate까지 사용하기 위해.. -->
        select *, date_format(regdate, "%Y-%m-%d %T") as fmtdate <!-- HashMap은 select 뒤 자기가 만들어서 -->
        from posts
        order by pid desc;
    </select>
    <insert id="insert">
    	insert into posts(title, body, writer)
    	values(#{title}, #{body}, #{writer});
    </insert>
    <update id="update">
    	update posts
    	set title=#{title}, body=#{body}, regdate=now()
    	where pid=#{pid};
    </update>
    <select id="read" resultType="com.example.domain.PostVO">
    	select *
    	from posts
    	where pid=#{pid};
    </select>
    <delete id="delete">
    	delete from posts where pid=#{pid};
    </delete>
</mapper>