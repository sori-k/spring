    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/" th:classappend="${pageName == 'about' ? 'active' : ''}">Home</a>
        </li>
        <li class="nav-item" id="pro_list">
          <a class="nav-link" href="/pro/list" th:classappend="${pageName == 'pro/list' ? 'active' : ''}">교수관리</a>
        </li>
         <li class="nav-item" id="stu_list">
          <a class="nav-link" href="/stu/list" th:classappend="${pageName == 'stu/list' ? 'active' : ''}">학생관리</a>
        </li>
        <li class="nav-item" id="posts">
          <a class="nav-link" href="/posts/list" th:classappend="${pageName == 'posts/list' ? 'active' : ''}">Posts</a>
        </li>
      </ul>
      <ul class="navbar-nav me-end mb-2 mb-lg-0">
		<li class="nav-item" id="login">
          <a class="nav-link" href="/users/login" th:classappend="${pageName == 'users/login' ? 'active' : ''}">로그인</a>
        </li>
        <li class="nav-item" id="mypage" style="display: none;">
          <a class="nav-link" href="/users/mypage">email</a>
