<script id="temp_mypage" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="text-center mb-5">
			<img src="http://via.placeholder.com/150x150" width="150">
		</div>
		<div class="text-center card p-2">
			<div>{{uname}}</div>
			<div>{{phone}}</div>
			<div>{{address1}} {{address2}}</div>
			<div class="my-3"><button class="btn btn-outline-secondary px-4">정보수정</button></div>
		</div>		
	</div>
</script>
<script>
	getMypage();
	
	function getMypage(){
		$.ajax({
			type:"get",
			url:"/users/read",
			data:{uid:sessionStorage.getItem("uid")},
			success:function(data){
				//console.log(data);
				const temp=Handlebars.compile($("#temp_mypage").html());
				$("#div_mypage").html(temp(data));
			}
		});
	}
</script>