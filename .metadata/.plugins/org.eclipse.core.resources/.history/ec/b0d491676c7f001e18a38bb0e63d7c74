					<button class="btn btn-secondary">취소</button>
				</div>
			</form>
		</div>		
	</div>
</script>

<script>
	getMypage();
	
	function getMypage(){
		$.ajax({
			type:"get",
			url:"/users/read",
			data:{uid:sessionStorage.getItem("uid")},
			success:function(data){
				//console.log(data);
				const temp=Handlebars.compile($("#temp_mypage").html());
				$("#div_mypage").html(temp(data));
			}
		});
	}
</script>