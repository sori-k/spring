<div class="my-5">
	<h1 class="text-center mb-5">마이페이지</h1>
	<div id="div_mypage" class="row justify-content-center mx-5"></div>
</div>

<script id="temp_mypage" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="text-center mb-4">
			<img src="http://via.placeholder.com/150x150" width="150" class="photo">
			
		</div>
		<div class="card p-3">
			<div>
				이름: {{uname}}
			</div><hr>
			<div>전화: {{phone}}</div><hr>
			<div>주소: {{address1}} {{address2}}</div>
			<div>가입일: {{fmtdate}}</div><hr>
			<div class="text-center">
				<a href="/users/update" class="btn btn-outline-secondary px-4">정보수정</a>
			</div>
		</div>		
	</div>
</script>

<script>
	Handlebars.registerHelper("checkImage", function(image){
		if(image){
			return "/display?file=" + image;
		}else{
			return "http://via.placeholder.com/150x150";
		}
	})
</script>

<script>
	getMypage();
	
	//이미지 변경
	$("#div_mypage").on("change", "#file", function(e){
		$("#div_mypage #photo").attr("src", URL.createObjectURL(e.target.files[0]));
	});

	$("#div_mypage").on("click", "#photo", function(){
		$("#div_mypage #file").click();	
	});
	
	
	//사진 변경 저장
	$("#div_mypage").on("click", "#btn-photo", function(){
		const file=$("#file").val();
		if(file == ""){
			alert("변경할 사진을 선택하세요.");
		}else{
			if(confirm("해당 사진으로 변경할까요?")){
				//사진 업로드
				const formData = new FormData();
				formData.append("file", $("#file")[0].files[0]); //파일에서 0번째 파일을 선택해서
				formData.append("uid", sessionStorage.getItem("uid"));
				
				$.ajax({
					type:"post",
					url:"/users/photo",
					data:formData,
					processData:false,
					contentType:false,
					success:function(){
						alert("이미지가 변경되었습니다.");
					}
				});
			}
		}
	});
	
	
	function getMypage(){
		$.ajax({
			type:"get",
			url:"/users/read",
			data:{uid:sessionStorage.getItem("uid")},
			success:function(data){
				//console.log(data);
				const temp=Handlebars.compile($("#temp_mypage").html());
				$("#div_mypage").html(temp(data));
			}
		});
	}
	
</script>