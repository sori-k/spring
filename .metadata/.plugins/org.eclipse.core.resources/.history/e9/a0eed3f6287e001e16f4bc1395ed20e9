<div class="my-5">
   <h1 class="text-center mb-5">게시글 정보</h1>
   <div class="text-end mb-2">
	   <button id="btn-update" class="btn btn-success btn-sm">수정</button>
	   <button id="btn-delete" class="btn btn-danger btn-sm">삭제</button>
   </div>
   <div id="div_post"></div>
</div>
<script id="temp_post" type="x-handlebars-template">
	<div class="card">
		<div class="card-body">
			<h5>{{pid}}:{{title}}</h5>
			<hr>
			<p>{{body}}</p>
		</div>
		<div class="card-footer">
			작성자: {{uname}} ({{writer}}) 작성일: {{fmtdate}}
		</div>
	</div>
</script>
<script>
   const pid = "[[${pid}]]";
   
   getPost();
   
   $("#btn-delete").on("click", function(){
	   if(!confirm(`${pid}번 게시글을 삭제할까요?`)) return;
	   $.ajax({
		   type:"post",
		   url:"/posts/delete",
		   data:{pid},
		   success:function(){
			   alert("게시글이 삭제되었습니다.");
			   location.href="/posts"; //게시글 목록으로 이동
		   }
	   })
   });
   
   function getPost(){
	   $.ajax({
		   type:"get",
		   url:"/posts/read.json",
		   data:{pid},
		   success:function(data){
			   //console.log(data);
			   const temp=Handlebars.compile($("#temp_post").html());
				$("#div_post").html(temp(data));
		   }
	   })
   }
</script>