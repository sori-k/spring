<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ProfessorMapper">
    <select id="list" resultType="hashmap">
        select *, date_format(hiredate, '%Y-%m-%d') as fmtdate, format(salary, 0) as fmtsalary
        from professors;
    </select>
    <select id="code" resultType="int">
    	select max(pcode)+1
		from professors;
    </select>
    <insert id="insert">
    	insert into professors(pcode, pname, dept, title, salary, hiredate)
    	values(#{pcode}, #{pname}, #{dept}, #{title}, #{salary}, #{hiredate});
    </insert>
    <select id="read" resultType="hashmap">
    	select *, date_format(hiredate, '%Y-%m-%d') as fmtdate, format(salary, 0) as fmtsalary
        from professors
        where pcode=#{pcode};
    </select>
    <select id="stu_list" resultType="hashmap">
    	select *
		from students
		where advisor=#{pcode};
    </select>
    <select id="cou_list" resultType="hashmap">
    	select *
		from courses
		where instructor=#{pcode};
    </select>
    <update id="update">
    	update professors
    	set pname=#{pname}, dept=#{dept}, title=#{title}, salary=#{salary}, hiredate=#{hiredate}
    	where pcode=#{pcode}
    </update>
</mapper>