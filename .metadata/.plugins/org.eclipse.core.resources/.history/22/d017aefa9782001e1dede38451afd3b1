<script>
	let page = 1;
	let size = 3;
	const post_id = "[[${param.pid}]]";
	
	getComments();
	function getComments(){
		$.ajax({
			type:"get",
			url:"/comments/list.json",
			data:{page, size, pid:post_id},
			success:function(data){
				console.log(data);
			}
		})
	}
</script>