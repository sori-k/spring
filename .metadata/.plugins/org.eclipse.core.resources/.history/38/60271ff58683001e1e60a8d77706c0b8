<script id="temp_stu" type="x-handlebars-template">
	<table class="table">
		{{#each .}}
		<tr>
			<td>{{scode}}</td>
			<td>{{sname}}</td>
			<td>{{dept}}</td>
			<td>{{year}}</td>
			<td>{{birthday}}</td>
		</tr>
		{{/each}}
	</table>
</script>

<script id="temp_cou" type="x-handlebars-template">
	<table class="table">
		{{#each .}}
		<tr>
			<th></th>
			<th></th>
			<th>강의시간</th>
			<th></th>
			<th></th>
		</tr>
		<tr>
			<td>{{lcode}}</td>
			<td>{{lname}}</td>
			<td>{{hours}}</td>
			<td>{{room}}</td>
			<td>{{persons}}/{{capacity}}</td>
		</tr>
		{{/each}}
	</table>
</script>

<script id="temp_pro" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="card p-3">
			<div>교수이름: {{pname}} ({{pcode}})</div><hr>
			<div>교수학과: {{dept}}</div><hr>
			<div>교수직급: {{title}} ({{fmtdate}})</div><hr>
			<div class="text-center">
				<a href="/pro/update?pcode={{pcode}}" class="btn btn-success px-4">정보수정</a>
			</div>
		</div>
	</div>
</script>

<script>
	const pcode = "[[${param.pcode}]]"; //thymleaf에서 파라미터값 받아오는 방법
	
	$(window).on("load", function(){
		$.ajax({
			type:"get",
			url:"/pro/read.json",
			data:{pcode},
			success:function(data){
				//console.log(data);
				const temp = Handlebars.compile($("#temp_pro").html());
				$("#div_pro").html(temp(data));
			}
		});
		
		//
		$.ajax({
			type:"get",
			url:"/pro/stu/list.json",
			data:{pcode},
			success:function(data){
				const temp = Handlebars.compile($("#temp_stu").html());
				$("#div_stu").html(temp(data));
			}
		});
		
		$.ajax({
			type:"get",
			url:"/pro/cou/list.json",
			data:{pcode},
			success:function(data){
				const temp = Handlebars.compile($("#temp_cou").html());
				$("#div_cou").html(temp(data));
			}
		})
	});
</script>