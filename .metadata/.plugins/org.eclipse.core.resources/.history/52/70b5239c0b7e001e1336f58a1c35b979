<div class="my-5">
	<h1 class="text-center mb-5">Post List</h1>
	<div class="text-end">
		<button class="btn btn-dark sm px-1">글쓰기</button>
	</div>
	<div id="div_posts"></div>
</div>

<script id="temp_posts" type="x-handlebars-template">
	<table class="table">
	{{#each .}}
		<tr>
			<td>{{pid}}</td>
			<td>{{title}}</td>
			<td>{{fmtdate}}</td>
			<td>{{uname}} ({{writer}})</td>
		</tr>
	{{/each}}
	</table>
</script>

<script>
	getPosts();
	function getPosts(){
		$.ajax({
			type:"get",
			url:"/posts/list.json",
			success:function(data){
				//console.log(data);
				const temp=Handlebars.compile($("#temp_posts").html());
				$("#div_posts").html(temp(data));
			}
		})
	}
</script>