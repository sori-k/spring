<script id="temp_mypage" type="x-handlebars-template">
	<div class="col-md-8">
		<div class="text-center mb-3">
			<img src="http://via.placeholder.com/150x150" width="200">
		</div>
		<div class="card p-3">
			<div>이름: {{uname}}</div>
			<div>전화: {{phone}}</div>
			<div>주소: {{address1}} {{address2}}</div>
			<div>가입일: {{fmtdate}}</div><hr>
			<div>
				<button class="btn btn-outline-secondary px-4">정보수정</button>
			</div>
		</div>
	</div>
</script>

<script>
	$.ajax({
		type:"get",
		url:"/users/read?uid=" + sessionStorage.getItem("uid"),
		success:function(data){
			const temp=Handlebars.compile($("temp_mypage").html());
			$("#div_mypage").html(temp(data));
		}
	})
	
</script>