import com.example.domain.PostVO;

@SpringBootTest
public class MysqlTest {
	@Autowired
	MysqlDAO dao;
	
	@Autowired
	PostDAO pdao;
	
	@Test
	public void insert() {
		PostVO vo=new PostVO();
		vo.setTitle("안녕하세요!");
		vo.setWriter("blue");
		pdao.insert(vo);
	}
	
	@Test
	public void list() {
		pdao.list();
	}
	
	@Test
	public void now() {
		System.out.println("Now:" + dao.now());
	}

}
