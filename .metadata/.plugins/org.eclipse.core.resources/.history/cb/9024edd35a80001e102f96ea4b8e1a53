	});
	
	
	function getPost(){
		$.ajax({
			type:"get",
			url:"/posts/read.json",
			data:{pid},
			success:function(data){
				const temp=Handlebars.compile($("#temp_post").html());
				$("#div_post").html(temp(data));
			}
		});
	}
</script>